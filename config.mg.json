		"position": {
		  "x": 5,
		  "y": 1
		}
	},  
	{
		"condition":"bgVal > 54 && bgVal <= 80",
		"image":"img/2.png",
		"position": {
		  "x": 5,
		  "y": 1
		}
	},  
	{
		"condition":"bgVal > 80 && bgVal <= 161",
		"image":"img/3.png",
		"position": {
		  "x": 5,
		  "y": 1
		}
	},
	{
		"condition":"bgVal > 161 && bgVal <= 216",
		"image":"img/4.png",
		"position": {
		  "x": 5,
		  "y": 1
		}
	},
	{
		"condition":"'HIGH' === bgVal || bgVal > 216",
		"image":"img/5.png",
		"position": {
		  "x": 5,
		  "y": 1
		}
	}
  ],
  "no_readings_time_text": {
    "position": {
      "x": 0,
      "y": 133
    },
    "text_pattern": "at $time",
    "text_settings": {
      "font_family": "Roboto-Regular",
