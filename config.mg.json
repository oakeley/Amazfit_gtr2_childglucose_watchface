      "font_family": "Roboto-Bold",
	  "text_style": "bold",
      "font_size": 25,
      "text_align": "right"
    }
  },
  "treatment_text": {
    "position": {
      "x": 178,
      "y": 164
    },
    "text_pattern": "$value at $time",
    "outdated_text_pattern": "$value $time ago",
    "text_settings": {
      "font_family": "Roboto-Regular",
      "font_size": 24,
      "text_align": "left"
    }
  },
  "no_readings_text": {
    "position": {
      "x": 0,
      "y": 70
